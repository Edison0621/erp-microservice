{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dapr-run-sales",
            "type": "shell",
            "command": "dapr run --app-id sales-api --app-port 5006 --dapr-http-port 3506 --components-path ./components",
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting Dapr",
                    "endsPattern": "You're up and running"
                }
            }
        },
